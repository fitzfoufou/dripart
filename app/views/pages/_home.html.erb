<div class='columns'>
  <div class='column is-full pr-0'>
    <%# Adding image for each major screen resolution %>
    <picture>
      <source srcset=<%= image_path('home_background-min.png') %> media='(min-width: 1023px)' />
      <source srcset=<%= image_path('home_background_tablet-min.png') %> media='(min-width: 768px)' />
      <source srcset=<%= image_path('home_background_mobile-min.png') %> media='(min-width: 600px)' />
      <img src=<%= image_path('home_background_tiny-min.png') %> />
    </picture>
  </div>
  <div class='column is-4-desktop is-offset-7-desktop is-5-tablet is-offset-7-tablet is-full-mobile has-text-centered-mobile is-overlay'>
    <div class='title custom-responsive-size'><%= t('main.home.title_html') %></div>
    <%= render 'cta_button' %>
  </div>
</div>